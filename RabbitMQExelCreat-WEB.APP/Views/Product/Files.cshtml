@model List<UserFile>
@{
    ViewData["Title"] = "Files";
}

@section Scripts
    {
    <script>
        $(document).ready(function () {
            var hasStartCreatingExcel = '@TempData["StartCreatingExcel"]';

            if (hasStartCreatingExcel) {
                Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Excel dosyanız oluşturuluyor, lütfen bekleyin, tamamlandığı zaman bildirim alacaksınız",
                    showConfirmButton: false,
                    timer: 2000
                });
            }
        });
    </script>
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }
</style>

<h1>Files</h1>

<table>
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Created Date
            </th>
            <th>
                File status
            </th>
            <th>
                Download
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath" class="btn btn-primary @(item.FileStatus==FileStatus.Creating ? "disabled": "")">Download</a>
            </td>
            


        </tr>
    }
</table>


